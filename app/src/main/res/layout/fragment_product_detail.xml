<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
 <data>
     <variable
         name="productGet"
         type="com.example.e_commerce.model.Product" />
 </data>
    <GridLayout
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:columnCount="2"
        android:rowCount="2">
        <ImageView
            android:id="@+id/productimageView"
            android:layout_width="200dp"
            android:layout_height="395dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:scaleType="centerInside"
            android:downloadImage="@{productGet.pictureUrl}"
            >
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="@{productGet.name}"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp">
            </TextView>
            <TextView
                android:id="@+id/productprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="@{String.valueOf(productGet.price)}"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                >
            </TextView>
            <TextView
                android:id="@+id/productdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginHorizontal="@dimen/cardview_default_radius"
                android:text="@{productGet.description}"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                >
            </TextView>
            <TextView
                android:id="@+id/producttype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="@{productGet.type}"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                >
            </TextView>
            <TextView
                android:id="@+id/productbrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginHorizontal="@dimen/cardview_default_radius"
                android:text="@{productGet.brand}"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                >
            </TextView>
            <TextView
                android:id="@+id/productquantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginHorizontal="@dimen/cardview_default_radius"
                android:text="@{productGet.quantityInStock}"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                >
            </TextView>

            <LinearLayout
                android:layout_marginTop="55dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="115dp"
                    android:rotationX="1"
                    android:text="Sepete Ekle"
                    android:textSize="12dp"
                    android:visibility="visible"
                    app:backgroundTint="#FB8C00"
                    >

                </Button>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/azaltButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="495dp"
            android:background="#7C4DFF"
            android:text="-"
            app:backgroundTint="?attr/scrimBackground">

        </Button>

        <Button
            android:id="@+id/altButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="495dp"
            android:background="#E040FB"
            android:text="+"
            app:backgroundTint="?attr/scrimBackground"
            >

        </Button>
        <TextView
            android:id="@+id/cogalttext"
            android:layout_marginTop="495dp"
            android:layout_marginLeft="133dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="1"
            >
        </TextView>
    </GridLayout>
</layout>
